<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.secret_diary.secretdiary.MainActivity"
    android:background="#5469DF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"
        style=""
        android:background="#E8E8E8">

    <NumberPicker
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/NumberPicker1"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:background="#A8A3A3"
        />
    <NumberPicker
        app:layout_constraintTop_toTopOf="@id/NumberPicker1"
        app:layout_constraintStart_toEndOf="@id/NumberPicker1"
        android:id="@+id/NumberPicker2"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:background="#A8A3A3"
        />
    <NumberPicker
        app:layout_constraintTop_toTopOf="@id/NumberPicker1"
        app:layout_constraintStart_toEndOf="@id/NumberPicker2"
        android:id="@+id/NumberPicker3"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:background="#A8A3A3"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/CheckPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#A8A3A3"
        app:layout_constraintTop_toTopOf="@id/NumberPicker1"
        app:layout_constraintBottom_toBottomOf="@id/NumberPicker1"
        app:layout_constraintEnd_toStartOf="@id/NumberPicker1"
        android:layout_marginEnd="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ChangePasswordButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#A8A3A3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/CheckPasswordButton"
        app:layout_constraintStart_toStartOf="@+id/CheckPasswordButton"
        app:layout_constraintEnd_toEndOf="@+id/CheckPasswordButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ConstraintLayout"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/kyobo"
        android:text="Secret Diary"
        android:textSize="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>